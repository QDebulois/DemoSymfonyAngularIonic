{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

  <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
  </style>

  <div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
      <li>Your controller at <code>/home/quentin/Codes/Git/_ModelSymfonyIonic/Symfony/src/Controller/HomeController.php</code></li>
      <li>Your template at <code>/home/quentin/Codes/Git/_ModelSymfonyIonic/Symfony/templates/home/index.html.twig</code></li>
    </ul>

    <h2>Angular Elements</h2>

    <span id="angularOutput">Cliquer sur Emit pour récupérer le contenu</span>

    <app-test id="angularTest" input="Hello Angular from Symfony"></app-test>
  </div>

{% endblock %}

{% block scripts %}

  <script>
    const angularOutput = document.getElementById('angularOutput');
    const angularTest = document.getElementById('angularTest');

    angularTest.addEventListener('output', e => {
      angularOutput.innerText = e.detail;
    });
  </script>

{% endblock %}
